{
    "type": "UiSdlConnected<UiSdlDataGrid>",
    "applicationStateRef": {
        "id": "WindTurbine.UiSdlApplicationStateWT"
    },
    "component": {
        "header": {
            "title": "All Turbine Measurements"
        },
        "paginationConfig": {
            "pageSize": 10,
            "pagination": true
        },
        "reorderableColumns": false,
        "filterBar": true,
        "dataSpec": {
            "dataType": "WindTurbineMeasurement",
            "contextVars": {
                "turbineId": {
                    "type": "UiSdlPageParam",
                    "path": "id"
                }
            },
            "columnFields": [
                {
                    "fieldName": "id",
                    "label": "id",
                    "sortable": true,
                    "searchable": true
                },
                {
                    "fieldName": "timestamp",
                    "label": "timestamp",
                    "sortable": true,
                    "searchable": true
                },
                {
                    "fieldName": "activePower",
                    "label": "activePower",
                    "sortable": true,
                    "searchable": true
                },
                {
                    "fieldName": "generatorRotationSpeed",
                    "label": "generatorRotationSpeed",
                    "sortable": true,
                    "searchable": true
                }
            ]
        },
        "rowActions": [
            {
                "type": "UiSdlDataGridRowAction",
                "name": "Delete With Confirmation",
                "actionSuffix": "DELETE_CUSTOM",
                "iconSuffix": "trash"
            }
        ]
    },
    "effectTriggers": [
        {
            "trigger": "WindTurbine.MeasurementEvents.ROW_CLICK",
            "effectType": "UiSdlEpicUpdateChart",
            "payload": {
                "chart": "WindTurbine.MeasurementChart"
            },
            "payloadStrategy": "MERGE"
        }
    ]
}